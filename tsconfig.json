{
  "compilerOptions": {
    "target": "es2015",
    "module": "commonjs",
    "moduleResolution": "node",
    "noUnusedLocals": false,
    "noFallthroughCasesInSwitch": true,
    "strict": true,
    "rootDir": "src",
    "outDir": "dist",
    "sourceMap": true,
    "lib": ["dom", "es2017"],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "jsx": "react"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
